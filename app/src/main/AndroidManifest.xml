<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pigeoff.devpal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_shark_square"
        android:label="@string/app_name"
        android:name=".DevpalApplication"
        android:roundIcon="@mipmap/ic_shark_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SettingsActivity" />
        <activity
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:name=".activities.IssueEditActivity" />
        <activity android:name=".activities.IssueActivity" />
        <activity android:name=".activities.ProjectActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>